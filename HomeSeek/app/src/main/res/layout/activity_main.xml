<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="Homeseek"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.LinearLayoutCompat android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학교 주변 매물"
            android:textSize="30dp"
            android:textColor="@android:color/holo_blue_dark" />

        <LinearLayout android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <Button
                android:id="@+id/Firstbutton"
                android:layout_width="wrap_content"
                android:layout_height="300px"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="정문"
                android:layout_weight="3"
                android:textStyle="bold"
                android:typeface="normal"/>

            <Button
                android:id="@+id/Middlebutton"
                android:layout_width="wrap_content"
                android:layout_height="300px"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="중문"
                android:layout_weight="3"
                android:textStyle="bold"
                android:typeface="normal"/>

            <Button
                android:id="@+id/Backbutton"
                android:layout_width="wrap_content"
                android:layout_height="300px"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="후문"
                android:layout_weight="3"
                android:textStyle="bold"
                android:typeface="normal"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지하철 주변 매물"
            android:textSize="30dp"
            android:textColor="@android:color/holo_blue_dark" />

        <LinearLayout android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <Button
                android:id="@+id/Subway1button"
                android:layout_width="wrap_content"
                android:layout_height="300px"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="흑석역"
                android:layout_weight="3"
                android:textStyle="bold"
                android:typeface="normal"/>

            <Button
                android:id="@+id/Subway2button"
                android:layout_width="wrap_content"
                android:layout_height="300px"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="상도역"
                android:layout_weight="3"
                android:textStyle="bold"
                android:typeface="normal"/>
        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v4.widget.DrawerLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/drawer">


        <ListView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#FFC107"
            android:id="@+id/drawer_menulist" />

    </android.support.v4.widget.DrawerLayout>

</android.support.v4.widget.DrawerLayout>
